extends layout

block content
	#content-sidebar-wrap
		nav#breadcrumb
			h1 Subir una foto

		hr

		#content
			form( method="post", action="/fotos/publicar", enctype="multipart/form-data" )
				#upload-file-container
					p
						label( for="upload-file" ) Fotografia
						input#upload-file( type="file", name="file", accept="image/*;capture=camera", required )

				hr

				p.title
					label( for="upload-title" ) Titulo 
						em (requerido)
					
					input#upload-title( type="text", name="name", required )
				
				p.description
					label( for="upload-description" ) Descripci&oacute;n 
						em Es opcional, pero nos gusta saber que tienes para decir
							br
							br
							strong Nota: 
								a( href="http://en.wikipedia.org/wiki/Markdown", target="_blank", tabindex="-1" ) Markdown
							|  está disponible
					textarea#upload-description( name="description" )

				p.privacy
					label( for="upload-privacy" ) Privacidad

					label.inline
						input#upload-privacy.radio( type="radio", name="privacy", value="public", checked ) 
						| Público

					label.inline
						input.radio( type="radio", name="privacy", value="private" ) 
						| Privado

				hr.hidden

				p.buttons
					button( type="submit" ) Subir